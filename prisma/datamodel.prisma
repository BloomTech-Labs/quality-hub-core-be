type User {
  id: ID! @id
  first_name: String!
  last_name: String!
  email: String! @unique
  password: String!
  city: String!
  state: String!
  gender: String
  bio: String
  industries: [Industry!]
  image_url: String
  portfolio_url: String
  linkedin_url: String
  github_url: String
  personal_url: String
  blog_url: String
  twitter_url: String
  resumes: [Resume!] @relation(name: "ResumeOnPerson", onDelete: CASCADE)
  activated_stripe: Boolean
}

type Resume {
  id: ID! @id
  user: User! @relation(name: "ResumeOnPerson", onDelete: SET_NULL)
  name: String!
  url: String!
}

type Industry {
  id: ID! @id
  name: String!
  users: [User!]
}